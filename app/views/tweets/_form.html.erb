<div class="m25">
<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
    <% if @tweet.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
    <%= f.text_area :content, :placeholder => 'いまどうしてる？' , class: 'form-control' %>
    <div id="btn_tweet" class="clearfix">
      <%= f.submit 'ツイート' , class: 'btn btn-primary pull-right' %>
    </div>
<% end %>
</div>