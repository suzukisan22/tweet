<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
    <% if @tweet.errors.any? %>
  <div id="error_explanation">
    <h2><%= @tweet.errors.count %>件のエラーがあります。</h2>

    <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <%= f.submit 'ツイート' %>
<% end %>
<%= link_to 'ツイート一覧に戻る', tweets_path %>