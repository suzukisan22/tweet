<div class="panel panel-default m25">
    <div class="panel-heading text-center">
        <h3 class="tweet">以下の内容でツイートする</h3>
    </div>
    <div class="panel-body">
        <%= form_for(@tweet, url: tweets_path) do |f| %>
            <h4 class="tweet"><%= @tweet.content %></h4>
            <%= f.hidden_field :content %>
        <div class="clearfix mt80">
            <div class="pull-right">
            <%= f.submit 'ツイート' , class: 'btn btn-primary' %>
            </div>
        <% end %>
        <%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
            <%= f.hidden_field :content %>
            <div class="pull-right">
                <%= f.submit '戻る', name: 'back' , class: 'btn btn-default mr25' %>
            </div>
        </div>
        <% end %>
    </div>
</div>